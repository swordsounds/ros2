<?xml version="1.0"?>
<robot name="my_robot">


    <material name="green">
        <color rgba="0 0.5 0 1"/>
    </material>

     <material name="grey">
        <color rgba="0.25 0.25 0.25 1"/>
    </material>

    <link name="base_link">
        <visual>
            <geometry>
                <cylinder size="0.6 0.4 0.2" /> <!-- LWH in meters -->
            </geometry>
            <origin xyz="0 0 0.1" rpy=" 0 0 0" /> <!-- roll pitch yaw - RPY -->
            <material name="green" />
        </visual>
    </link>


    <link name="second_link">
        <visual>  
            <geometry>
                <cylinder radius="0.1" length="0.2"/>
            </geometry>
            <origin xyz="0 0 0" rpy=" 0 0 0" />
            <material name="grey" />
        </visual>
    </link>

</robot>

